= simple_form_for(@ad, html: { class: 'form-horizontal'}) do |f|
	= f.collection_select :category_id, Category.all, :id, :name, {promt: "Choose a category" }, input_html: { class: "dropdown-toggle" }
	= f.input :image
	= f.input :title, label: "Ad Title", input_html: { class: "form-control" }
	= f.input :description, label: "Ad Description", input_html: { class: "form-control" }
	= f.input :price, label: "Price", input_html: { class: "form-control" }
	= f.input :tel, label: "Telephone number", input_html: { class: "form-control" }
	%br/
	= f.button :submit